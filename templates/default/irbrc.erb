# Also load local config.
begin
  require './irb'
rescue LoadError => err
  puts "No local irb.rb found"
end

begin
  require 'awesome_print'
rescue LoadError => err
  warn "Couldn't load AwesomePrint: #{err}"
end

begin
  # load wirble
  require 'wirble'

  # start wirble (with color)
  Wirble.init
  Wirble.colorize
rescue LoadError => err
  warn "Couldn't load Wirble: #{err}"
end

begin
  # load hirb
  require 'hirb'

  # start hirb
  Hirb::View.enable
  Hirb::View.formatter_config
rescue LoadError => err
  warn "Couldn't load Hirb (ActiveRecord pretty printer): #{err}"
end
