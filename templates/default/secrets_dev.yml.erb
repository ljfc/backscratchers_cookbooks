development:
  perform_http_authentication: <%= @dev['http_auth'] %>
  username: <%= @dev['username'] %>
  password: <%= @dev['password'] %>

  load_balanced: false
  use_https: false

  show_version_info: <%= @dev['show_version_info'] %>

  path: '<%= @dev['path'] %>'

  :segment_io_key: <%= @dev['segment'] %>

  insightly:
    api_key: <%= @dev['insightly'] %>

  s3:
    bucket: <%= @dev['s3_credentials']['bucket'] %>
    <% if @dev['s3_credentials'].has_key? 'source_bucket' %>
    source_bucket: <%= @dev['s3_credentials']['source_bucket'] %>
    <% else %>
    # Source bucket not included as it’s n/a to production – production *is* the source!
    <% end %>
    access_key_id: <%= @dev['s3_credentials']['access_key_id'] %>
    secret_access_key: <%= @dev['s3_credentials']['secret_access_key'] %>
    s3_endpoint: <%= @dev['s3_credentials']['s3_endpoint'] %>
    s3_host_name: <%= @dev['s3_credentials']['s3_host_name'] %>
    region: <%= @dev['s3_credentials']['region'] %>
    path_style: true

  xero:
    consumer_key: <%= @dev['xero']['consumer_key'] %>
    consumer_secret: <%= @dev['xero']['consumer_secret'] %>
    api_endpoint_url: <%= @dev['xero']['api_endpoint_url'] %>
    path_to_private_key: <%= @dev['xero']['path_to_private_key'] %>

  browshot:
    api_key: <%= @dev['browshot'] %>

  slack:
    api_token: <%= @dev['slack'] %>
    test_mode: <%= @dev['slack_testing'] %>

  mail:
    <% (@dev['mail'].keys - ['authentication']).each do |key| %>
    <%= key %>: '<%= @dev['mail'][key] %>'
    <% end %>
    <% if @dev['mail'].has_key? 'authentication' %>
    authentication: :<%= @dev['mail']['authentication'] %>
    <% end %>

  recaptcha:
    public_key: <%= @dev['recaptcha']['public_key'] %>
    private_key: <%= @dev['recaptcha']['private_key'] %>

